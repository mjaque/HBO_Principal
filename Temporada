package poo;

import java.util.ArrayList;
import java.util.List;

public class Temporada {
	private  Integer numero;
	private List<Capitulo> capitulos= new ArrayList<>();
	private Integer contadorTemporada=1;
	
	@SuppressWarnings("unchecked")
	public Temporada(int numero) {
		this.numero=numero;
		capitulos=new ArrayList();
	}
	
	//GETTERS & SETTERS
	public  int getNumero() {
		return numero;
	}
	public void setNumero(int numero) {
		this.numero = numero;
	}
	//Si solo vas a devolver un capítulo el método debería ser
	public Capitulo getCapitulo(int numCap) {	//nombre en singular
		return capitulos.get(numCap);
	}
	//Si vas a devolver toda la lista de capítulos, debería ser
	public List<Capitulo> getCapitulos() {	//sin parámetros
		return this.capitulos;
	}*/
	//Más claro con this
	public void setCapitulos(List<Capitulo> capitulos) {
		this.capitulos=capitulos;
	}
	
	
	//añadir capitulos a la temporada
	/**
     * Método addCapitulos
     *Añade capítulos a la Temporada
     * @param tituloCapitulo Añade un nombre al capítulo
     */
     //Tienes que recibir un "Capítulo", no un String
	public void addCapitulos(Capitulo nuevoCapitulo) {
		this.capitulos.add(nuevoCapitulo);
	}
}
